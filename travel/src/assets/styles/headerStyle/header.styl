$bgColor=#00bcd4
.header
    display :flex
    justify-items:center
    line-height:3rem
    background:$bgColor
    color:#fff
    .header-left
        width:2.5rem
        float: left
        .back-icon
            font-size: 1.85rem
            text-align: center
    .header-input
        flex:1
        line-height:2.5rem
        background:#fff
        border-radius:.5rem
        padding-left: 0.5rem
        margin:0.3rem 0
        color:#ccc
    .header-right
        width: 4rem
        float:right
        text-align:center
        .arrow-icon
           font-size: .7rem 
           margin-left: -.15rem